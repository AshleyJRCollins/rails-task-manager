<h1><%= @task.title %></h1>
<p><%= link_to 'Edit this task', edit_task_path(@task) %></p>
<p><%= @task.details %></p>
<p><%= @task.completed ? '[x]' " This task is completed" : '[ ]' " This task is not completed yet"%></p>

<div>
  <%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete %>
</div>

<p><%= link_to 'Back to list', tasks_path %></p>
